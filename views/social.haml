.social
  - url = @page.nil? ? base_url : url_for(@page)
  - heading = @page.nil? ? @heading : @page.heading
  %a{ :href => "http://delicious.com/post?url=#{url}&title=#{heading}", :title => "Bookmark on delicious.com" }
    %img{ :src => "/delicious.png", :alt => "Bookmark on delicous.com" }
  %a{ :href => "http://digg.com/submit?phase=2&url=#{url}&title=#{heading}", :title => "Digg it!" }
    %img{ :src => "/digg.png", :alt => "Digg it!" }
  %a{ :href => "http://reddit.com/submit?url=#{url}&title=#{heading}", :title => "Reddit!" }
    %img{ :src => "/reddit.gif", :alt => "Reddit!" }
  %a{ :href => "/articles.xml", :title => "Atom Feed" }
    %img{ :alt => "Atom feed", :src => "/feed-icon.png" }/